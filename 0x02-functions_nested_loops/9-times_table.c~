#include "holberton.h"

/**
 * times_table -  This program prints the 9 times multiplcation table.
 *
 * Return: Always 0.
 */
void times_table(void)
{
	int i, j;
	int r;

	for (i = 0; i <= 9; i++)
	{
		putchar(48);
		for (j = 0; j <= 9; j++)
		{
			r = i * j;
			putchar(',');
			putchar(' ');

			if (r <= 9)
			{
				putchar(' ');
				putchar(r + 48);
			}
				else
				{
					putchar((r / 10) + 48);
					putchar((r % 10) + 48);
				}
				putchar('\n');
		}
}
